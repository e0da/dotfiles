; vi: set filetype=dosini:

[user]
  name       = Justin Force
  email      = justin.force@gmail.com
  signingkey = 0x203EABFA

[color]
  ui = auto

[alias]
  a       = add
  aa      = add --all
  b       = branch
  ci      = commit
  co      = checkout
  d       = diff
  dc      = diff --cached
  pl      = pull --rebase
  pr      = pull-request
  ps      = push
  s       = status --short
  l       = log --stat
  f       = fetch origin --prune
  mm      = merge origin/master
  ff      = merge origin/master master --ff-only
  m       = merge --no-ff
  lol     = log --graph --decorate --pretty      = oneline --abbrev-commit
  lola    = log --graph --decorate --pretty      = oneline --abbrev-commit --all
  last    = cat-file commit HEAD
  fuckit  = reset --hard HEAD
  aliases = !~/bin/git_aliases
  alias   = !~/bin/git_aliases

[rerere]
  enabled = true

[core]
	excludesfile = ~/.gitignore_global

[web]
	browser = google-chrome

[credential]
  helper = store
  ; Credentials are stored in ~/.git-credentials. The format for a credentials
  ; entry looks like this:
  ;
  ;   https://usename:password@example.com
  ;
  ; For GitHub the token is the username, and there is no password:
  ;
  ;   https://0123456789afcdef:@github.com

; AppFolio config
; http://af-academy.herokuapp.com/topics/dev-environment
[init]
	templatedir = ~/.git_template
[push]
	default = simple
