#!/bin/bash -ex

_NVIM_DIR="$HOME/.config/nvim"
_PLUG_SNAPSHOT="${_NVIM_DIR}/PlugSnapshot"
_POLYGLOT="${_NVIM_DIR}/plugged/vim-polyglot"
_DOTFILES="$HOME/src/dotfiles"

update-os() {
  if command -v apt-get; then
    sudo apt-get update
    sudo apt-get dist-upgrade -y
  fi
  if command -v snap; then
    sudo snap refresh
  fi
}

update-dotfiles() {
  if [ -d "${_DOTFILES}" ]; then
    cd "${_DOTFILES}"
    rake
  fi
}

update-vim-plugins-v3() {
  if command -v nvim; then
    # shellcheck disable=2016
    nvim +'PlugUpgrade' \
        +'source $MYVIMRC' \
        +'PlugClean!' \
        +'PlugUpdate' \
        +'qa'
  fi
}

update-vim-plugins-v2() {
  if command -v nvim; then
    # XXX [vim-polyglot 1/2] breaks PlugUpdate, so we'll manage its clean up and
    # installation here instead of with vim-plug's { 'do': './build' }
    (
      cd "${_POLYGLOT}" &&
        git reset --hard &&
        git clean -d --force
    )

    # shellcheck disable=2016
    nvim +'PlugUpgrade' \
        +'source $MYVIMRC' \
        +'PlugClean!' \
        +'PlugUpdate' \
        +'qa'

    # XXX [vim-polyglot 2/2] Build
    (
      cd "${_POLYGLOT}" &&
        ./build
    )
  fi
}

# Delete this if unneeded
update-vim-plugins-v1() {
  if command -v nvim; then
    # XXX [vim-polyglot 1/2] breaks PlugUpdate, so we'll manage its clean up and
    # installation here instead of with vim-plug's { 'do': './build' }
    (
      cd "${_POLYGLOT}" &&
        git reset --hard &&
        git clean -d --force
    )

    # shellcheck disable=2016
    nvim +'PlugUpgrade' \
        +'source $MYVIMRC' \
        +'PlugClean!' \
        +'PlugUpdate' \
        +'source $MYVIMRC' \
        +"PlugSnapshot! ${_PLUG_SNAPSHOT}" \
        +'qa'

    # XXX [vim-polyglot 2/2] Build
    (
      cd "${_POLYGLOT}" &&
        ./build
    )

    # Remove the timestamp so it won't affect diffs
    # shellcheck disable=1117
    sed -i "/.*\".*\b[0-9]\{4\}\b.*\b[0-9][0-9]:[0-9][0-9]/Id" "${_PLUG_SNAPSHOT}"
  fi
}

update-vim-plugins() {
  case "$VIM" in
    1)
      update-vim-plugins-v1
      ;;
    2)
      update-vim-plugins-v2
      ;;
    3|*)
      update-vim-plugins-v3
      ;;
  esac
}

update-os
update-dotfiles
update-vim-plugins
